<head>
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Inconsolata">
  <style>
    body {
      font-family: Inconsolata;
    }

    .trace {
      background-color: #4c5467;
      color: white;
    }

    .preview {
      background: #576075;
      color: #db5757;
      padding-top: 14px;
    }

    code {
      font-family: Inconsolata;
    }

    ul {
      list-style-type: none;
      padding-bottom: 14px;
    }
  </style>
</head>

<body>

<pre>
  <code><%= message %></code>
</pre>


<div class="trace">
  <pre class="preview">
    <code><%= code_preview %></code>
  </pre>
  <ul>
    <% backtrace.each do |trace| %>
      <li>
        <%= trace %>
      </li>
    <% end %>
  </ul>
</div>

</body>
